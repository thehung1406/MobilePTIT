<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.btl.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_hotelSearchFragment"
            app:destination="@id/hotelSearchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <!-- HotelSearchFragment -->
    <fragment
        android:id="@+id/hotelSearchFragment"
        android:name="com.example.btl.ui.hotel.HotelSearchFragment"
        android:label="fragment_hotel_search"
        tools:layout="@layout/fragment_hotel_search" >
        <action
            android:id="@+id/action_hotelSearchFragment_to_locationSearchFragment"
            app:destination="@id/locationSearchFragment" />
        <!-- Navigate đến Hotel Detail -->
        <action
            android:id="@+id/action_hotelSearchFragment_to_hotelDetailFragment"
            app:destination="@id/hotelDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <!-- HotelDetailFragment -->
    <fragment
        android:id="@+id/hotelDetailFragment"
        android:name="com.example.btl.ui.hotel.HotelDetailFragment"
        android:label="fragment_hotel_detail"
        tools:layout="@layout/fragment_hotel_detail">

        <!-- Arguments cho Hotel Detail -->
        <argument
            android:name="propertyId"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="propertyName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="checkInDate"
            app:argType="long"
            android:defaultValue="0L" />

        <argument
            android:name="checkOutDate"
            app:argType="long"
            android:defaultValue="0L" />

        <argument
            android:name="numberOfGuests"
            app:argType="integer"
            android:defaultValue="2" />

        <argument
            android:name="numberOfRooms"
            app:argType="integer"
            android:defaultValue="1" />

        <!-- Action đến Booking -->
        <action
            android:id="@+id/action_hotelDetailFragment_to_bookingFragment"
            app:destination="@id/bookingFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        
        <action
            android:id="@+id/action_hotelDetailFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
            
    </fragment>
    <!-- BookingFragment -->
    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.example.btl.ui.booking.BookingFragment"
        android:label="fragment_booking"
        tools:layout="@layout/fragment_booking">

        <!-- Arguments cho Booking -->
        <argument
            android:name="roomTypeId"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="propertyId"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="roomTypeName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="roomTypePrice"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="checkInDate"
            app:argType="long"
            android:defaultValue="0L" />

        <argument
            android:name="checkOutDate"
            app:argType="long"
            android:defaultValue="0L" />

        <argument
            android:name="numberOfGuests"
            app:argType="integer"
            android:defaultValue="2" />

        <argument
            android:name="numberOfRooms"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

    <!-- LocationSearchFragment -->
    <fragment
        android:id="@+id/locationSearchFragment"
        android:name="com.example.btl.ui.location.LocationSearchFragment"
        android:label="fragment_location_search"
        tools:layout="@layout/fragment_location_search" />

    <!-- TripsFragment -->
    <fragment
        android:id="@+id/tripsFragment"
        android:name="com.example.btl.ui.trips.TripsFragment"
        android:label="Chuyến đi"
        tools:layout="@layout/fragment_trips">
        <action
            android:id="@+id/action_tripsFragment_to_hotelSearchFragment"
            app:destination="@id/hotelSearchFragment" />
    </fragment>

    <!-- DealsFragment -->
    <fragment
        android:id="@+id/dealsFragment"
        android:name="com.example.btl.ui.deals.DealsFragment"
        android:label="Ưu đãi"
        tools:layout="@layout/fragment_deals" />

    <!-- FavoritesFragment -->
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.btl.ui.favorites.FavoritesFragment"
        android:label="Yêu thích"
        tools:layout="@layout/fragment_favorites" />

    <!-- ProfileFragment (was More) -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.btl.ui.profile.ProfileFragment"
        android:label="Hồ sơ"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_accountSettingsFragment"
            app:destination="@id/accountSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_reviewHistoryFragment"
            app:destination="@id/reviewHistoryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_walletFragment"
            app:destination="@id/walletFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_refundFragment"
            app:destination="@id/refundFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_chatbotFragment"
            app:destination="@id/chatbotFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="com.example.btl.ui.profile.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" >
        <action
            android:id="@+id/action_accountSettingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.btl.ui.profile.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/reviewHistoryFragment"
        android:name="com.example.btl.ui.profile.ReviewHistoryFragment"
        android:label="fragment_review_history"
        tools:layout="@layout/fragment_review_history" />

    <fragment
        android:id="@+id/walletFragment"
        android:name="com.example.btl.ui.profile.WalletFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_wallet" />

    <fragment
        android:id="@+id/refundFragment"
        android:name="com.example.btl.ui.profile.RefundFragment"
        android:label="fragment_refund"
        tools:layout="@layout/fragment_refund" />

    <fragment
        android:id="@+id/chatbotFragment"
        android:name="com.example.btl.ui.profile.ChatbotFragment"
        android:label="fragment_chatbot"
        tools:layout="@layout/fragment_chatbot" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.btl.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_hotelDetailFragment"
            app:destination="@id/hotelDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

</navigation>